#!/bin/sh

R_HOME=@R_HOME@
JRI_LD_PATH=$RHOME:@JAVA_LD_PATH@
if test -z "$LD_LIBRARY_PATH"; then
  LD_LIBRARY_PATH=$JRI_LD_PATH
else
  LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$JRI_LD_PATH
fi
JAVA=@JAVA_PROG@

export R_HOME
export LD_LIBRARY_PATH

if [ -z "$1" ]; then
    echo ""
    echo " Usage: run <class>"
    echo ""
    echo " For example: ./run rtest"
    echo ""
else
    $JAVA -cp .:src/JRI.jar $*
fi
